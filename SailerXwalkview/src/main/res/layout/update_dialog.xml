<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_retangle_dialog_bg"
    android:orientation="vertical"
    android:paddingBottom="22dp"
    android:paddingLeft="28dp"
    android:paddingRight="28dp"
    android:paddingTop="33dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="有版本更新，是否下载"
        android:textColor="#333333"
        android:textSize="18dp" />


    <LinearLayout
        android:id="@+id/ll_twobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_btnleft"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/blue_retangle_ok"
            android:gravity="center"
            android:text="好的"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_btnright"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不了"
            android:textColor="@color/selector_blue_color"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>